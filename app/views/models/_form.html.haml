= form_with(model: model) do |form|
  - if model.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(model.errors.count, "error")
        prohibited this model from being saved:
      %ul
        - model.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_field :name
  %div
    = form.label :cars_count, style: "display: block"
    = form.number_field :cars_count
  %div
    = form.label :parent_id, style: "display: block"
    = form.number_field :parent_id
  %div
    = form.label :description, style: "display: block"
    = form.text_area :description
  %div
    = form.label :brand, style: "display: block"
    = form.select :brand_id, options_for_select(@brands.collect{|bra|[bra.name, bra.id]})
  %div
    = form.submit

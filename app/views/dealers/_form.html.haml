= form_with(model: dealer) do |form|
  - if dealer.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(dealer.errors.count, "error")
        prohibited this dealer from being saved:
      %ul
        - dealer.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_field :name
  %div
    = form.submit
